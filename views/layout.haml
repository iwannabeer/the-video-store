!!! 5
%html{:lang => "en"}
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1" }
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    
    %title= @title || '/JokesTime'
    
    %link{ :rel => "icon", :type => "image/png", :href => "/favicon.png" }
    %link{ :rel => "stylesheet", :href => "/stylesheets/bootstrap.min.css" }
    %link{ :rel => "stylesheet", :href => "/stylesheets/bootstrap-theme.min.css" }
    %link{ :rel => "stylesheet", :href => "/stylesheets/cyborg_bootstrap.css" }
    %link{ :rel => "stylesheet", :href => "/stylesheets/application.css" }
    %script{ :type => "text/javascript", :src => "/js/jquery-3.1.1.min.js"}
    %script{ :src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js",                                                   :integrity => "sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", :crossorigin => "anonymous" }
  %body
    %nav.navbar.navbar-inverse
      %div.container-fluid
        %div.navbar-header
          %a.navbar-brand{:href => "/"} /JokesTime
        %div.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "/user/home"} 
                Home
                %span.sr-only (current) 
            %li
              %a{:href => "/video/list"} Videos
            %li
              %form.navbar-form
                %div.form-group
                  %input.form-control{:placeholder => "Search", :type => "text"}
                %button.btn.btn-default{:type => "submit"} Submit
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "/about"} About
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"} 
                Profile 
                %span.caret
              %ul.dropdown-menu
                %li#profile
                  %a#profile{:href => "/login"} Login
                %li.divider{:role => "separator"}
                %li#profile
                  %a#profile{:href => "/logout"} Logout
      = styled_flash   
      = yield

    %footer.footer
      %div.container-fluid.text-center
        %p &copy;PARENTAL ADVISORY EXPLICIT CONTENT Inc, 2016
  